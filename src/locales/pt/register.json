        {
          "name": "city",
          "type": "text",
          "required": "o cidade é obrigatório",
          "minlength": {
            "value": 2,
            "message": "o cidade deve ter pelo menos 2 caracteres"
          },
          "pattern": {
            "value": "/^[a-zA-Záéíóúãõâêôç]+$/",
            "message": "o cidade deve conter apenas letras"
          },
          "placeholder": "cidade"
        },
        {
          "name": "phone",
          "type": "text",
          "required": "o telefone é obrigatório",
          "minlength": {
            "value": 9,
            "message": "o número de telefone deve ter pelo menos 9 dígitos"
          },
          "pattern": {
            "value": "/^[0-9]*$/",
